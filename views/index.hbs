<div class="container shadow-lg pt-3">
  <div class="row">
    <div class="d-flex justify-content-center align-items-center">
      <h2 class="align-top">總金額：</h2>
      <h1>{{totalAmount}}</h1>
    </div>
  </div>
  <div class="row">
    <form action="/" method="get" class="filter-form">
      <select name="category">
        <option value="">選擇全部</option>
        {{#forEach categories}}
        <option value="{{categoryName}}" {{#eq categoryName ../option.category}}selected{{/eq}}>{{categoryName}}</option>
        {{/forEach}}
      </select>
      <select name="date">
        <option value="">選擇全部</option>
        {{#each months}}
        <option value="{{this}}" {{#eq this ../option.date}}selected{{/eq}}>{{this}}</option>
        {{/each}}
      </select>
    </form>
  </div>
  <div class="row">
    <a href="/expenses/create" class="col-8 col-sm-6 mx-auto btn btn-success">新增紀錄</a>
  </div>
  <div class="row">
    <div class="col col-md-10 mx-auto">
      <table class="table table-striped table-hover">
        <tbody>
          {{#forEach records}}
          <tr class="align-middle">
            <td>
              <i class="{{icon}}"></i>
            </td>
            <td>
              <div class="d-flex flex-column justify-content-center align-items-start">
                <div class="d-flex align-items-center">
                  <h2>{{name}}</h2><span>@{{merchant}}</span>
                </div>
                <small>{{this.date}}</small>
              </div>
            </td>
            <td>
              <h2>{{amount}}</h2>
            </td>
            <td>
              <div class="d-flex justify-content-end">
                <a href="/expenses/{{_id}}/edit" class="btn btn-outline-info">edit</a>
                <form action="/expenses/{{_id}}?_method=DELETE" method="post" style="display: inline;">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </td>
          </tr>
          {{/forEach}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<script src="/js/index.js"></script>
